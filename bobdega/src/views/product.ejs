<%- include('./partials/header', {pageTitle : 'Productos'}) %> 
   <main>
        <section class="">
            <h2><%= producto.nombre %></h2>
            <img src="/images/<%=producto.img%>" alt="" style="max-width: 200px;">
            <div>
                <h3><%= producto.precio %></h3>
                <p>FICHA TÉCNICA</p>
                <p><%= producto.ficha %></p>
                    
                    <p>PRODUCTOR</p>
                    <p><%= producto.productor %></p>
                    
                    <p>TIPO</p>
                    <p><%= producto.tipo %></p>
                    
                    <p>VARIEDAD</p>
                    <p><%= producto.variedad %></p>
                    
                    <p>CORTE</p>
                    <p><%= producto.corte %></p>
                    
                    <p>ALCOHOL</p>
                    <p><%= producto.alcohol %></p>
                    
                    <p>LUGAR DE ELABORACIÓN</p>
                    <p><%= producto.lugar %></p>
                    
                    <p>CRIANZA / BARRICADO</p>
                    <p><%= producto.barricado %></p>
                    
                    
                    <p>ELABORACIÓN</p>
                    <p><%= producto.elaboracion %></p>
                    
                    <p>ENÓLOGO</p>
                    <p><%= producto.enologo %></p>

